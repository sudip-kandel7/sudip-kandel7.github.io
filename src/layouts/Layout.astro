---
import "../styles/global.css";
import Navbar from "../components/commons/navbar/navbar.astro";
import Footer from "../components/commons/footer/footer.astro";
import { SEO } from "astro-seo";

const {
  pageTitle = "",
  description = "Personal portfolio of Sudip Kandel, frontend developer",
} = Astro.props;

const baseTitle = "Sudip Kandel | Portfolio";
const fullTitle = pageTitle
  ? `${baseTitle} â€“ ${pageTitle}`
  : baseTitle;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/logo.jpg" />
    <meta name="generator" content={Astro.generator} />
   <SEO
  title={fullTitle}
  description={description}
  openGraph={{
    basic: {
      title: fullTitle,
      type: "website",
      image: "/og.png",
    },
  }}
  twitter={{
    card: "summary_large_image",
  }}
/>
  </head>
  <body class="bg-gray-950 text-white">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
